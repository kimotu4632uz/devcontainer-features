{
    "name": "dotfiles",
    "id": "dotfiles",
    "version": "0.1.0",
    "description": "Clone dotfiles using git and run setup scripts.",
    "installsAfter": [
        "ghcr.io/devcontainers/features/git"
    ],
    "options": {
        "repository": {
            "type": "string",
            "description": "URL of dotfile repository."
        },
        "targetPath": {
            "type": "string",
            "default": "~/dotfiles",
            "description": "Target path to clone repository."
        },
        "setupCmd": {
            "type": "string",
            "description": "Setup command."
        }
    }
}
